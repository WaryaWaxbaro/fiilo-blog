<div class="table-responsive py-4 p-2 p-sm-3">
  <table class="table table-bordered">
    <thead class="table-dark">
    <tr>
      <th></th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Message</th>
      <th>Extra info</th>
      <th>Submitted at</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @contacts.each_with_index do |contact, index| %>
      <tr>
        <td class="text-center"><%= pagy&.from.to_i + index %></td>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.message %></td>
        <td><%= contact.extra_info %></td>
        <td><%= contact.created_at.strftime("%d.%m.%Y %H:%M") %></td>
        <td>
          <%= link_to admin_contact_path(contact), class: 'shadow-sm' do %>
            <span class="fs-5"><i class="fas fa-eye"></i></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_admin_contact_path(contact), class: 'shadow-sm' do %>
            <span class="text-warning fs-5"><i class="fas fa-edit"></i></span>
          <% end %>
        </td>
        <td>
          <%= link_to admin_contact_path(contact), method: :delete, data: { confirm: 'Are you sure?' }, class: 'shadow-sm' do %>
            <span class="text-danger fs-5"><i class="far fa-trash-alt"></i></span>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <div class="w-100 p-2">
    <p class="fs-14">Showing <%= pagy.items %> items from <%= pagy.from %> to <%= pagy.to %> of <%= pagy.count %> entries</p>
  </div>
  <div class="w-100 p-2 d-flex align-items-center" id="admin-pagination">
    <%= render 'pagination/nav', pagy: pagy %>
  </div>
</div>