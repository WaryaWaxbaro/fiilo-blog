<main class="min-85vh">
  <div class="container">
    <div class="max-width-550 mx-auto shadow p-3 mt-4">
      <h2 class="fs-2 my-3 text-center">Editing Contact</h2>
      <div class="text-end my-3">
        <%= link_to 'Show', admin_contact_path(@contact), class: 'btn btn-outline-dark rounded-0 me-3' %>
        <%= link_to 'Back', admin_contacts_path, class: 'btn btn-dark rounded-0' %>
      </div>
      <%= render 'form', contact: @contact %>
    </div>
  </div>
</main>
