<div class="my-3 pt-3 border-top" data-controller="tags">
  <h3 class="fs-6 mb-3">Tags</h3>
  <div>
    <div class="d-flex flex-wrap border rounded-3 p-2" style="min-height: 56px;">
      <% post.tags.each do |tag| %>
        <div class="d-flex p-1 border me-1 mb-1">
          <span class="d-block me-3"><%= tag.name %></span>
          <button class="btn bg-transparent border-0 p-0 m-0"
                  data-action="tags#removeTag"
                  data-tag-id="<%= tag.id %>"><i class="fas fa-times pe-none"></i></button>
        </div>
      <% end %>
    </div>
    <div class="w-100 mt-2 position-relative">
      <form name="tags" data-tags-target="tagForm">
        <input type="hidden" id="tags_post_id" name="post_id" value="<%= post.id %>">
        <input type="text" name="name" required data-action="keyup->tags#showAvailableTags click->tags#showAvailableTags" placeholder="Add tag ..." class="border p-2" style="height: 38px;"/>
        <button class="btn btn-dark rounded-0 ms-2" data-action="tags#addNewTag">Add</button>
      </form>
      <ul class="list-unstyled position-absolute start-0 overflow-auto d-none" data-tags-target="availableTags" style="top: 38px; max-height: 160px; min-width: 185px;">
      </ul>
    </div>
  </div>
</div>