<%= form_with(model: comment) do |form| %>
  <%= form.hidden_field :post_id, value: post.id %>

  <div class="mb-3">
    <%= form.text_area :comment, class: 'form-control shadow', rows: '3', placeholder: 'Your comments....' %>
  </div>

  <div class="text-end mb-3">
    <%= form.submit 'Add comment', class: 'btn btn-sm btn-dark rounded-0 shadow' %>
  </div>

<% end %>
