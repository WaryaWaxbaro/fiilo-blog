<main class="min-85vh">
  <% if @posts && @posts.length > 0 %>
    <div class="position-relative w-100 py-5 bg-dark-trans-4">
      <div class="container">
        <div class="max-width-550">
          <p class="text-light mb-4" style="font-size: 12px;"><%= @posts[0].created_at.strftime("%d.%m.%Y %H:%M") %></p>
          <h1 class="fs-1 text-light mb-3"><%= @posts[0].title %></h1>
          <p class="text-light mb-4"><%= @posts[0].intro %></p>
          <%= link_to 'Read more', root_path, class: 'btn btn-light rounded-0 py-2' %>
        </div>
      </div>
      <%= image_tag 'html_5.jpeg', class: 'position-absolute start-0 top-0 z-1 cover-img', alt: 'alt' %>
    </div>
  <% end %>
  <div class="container my-5">
    <div class="blog-cards w-100 d-flex flex-wrap">
      <% @posts.each do |post| %>
        <div>
          <div class="w-100p h-100 rounded-3 border shadow">
            <div class="w-100 height-240 p-1">
              <%= image_tag 'html_5.jpeg', class: 'cover-img rounded-3', alt: 'alt' %>
            </div>
            <div class="py-4 px-3">
              <p class="" style="font-size: 12px"><%= post.created_at.strftime("%d.%m.%Y %H:%M") %></p>
              <h2 class="fs-5 mb-3"><%= post.title %></h2>
              <div class="d-flex align-items-center mb-2">
                <i class="fas fa-user"></i>
                <p class="mb-0 ms-2" style="font-size: 14px"><%= post.user.full_name %></p>
              </div>
              <div class="d-flex align-items-center">
                <i class="fas fa-tags"></i>
                <p class="mb-0 ms-2" style="font-size: 14px">
                  <a href="">HTML</a>,
                  <a href="">CSS</a>,
                  <a href="">Rails</a>
                </p>
              </div>
              <div class="h-100 d-flex flex-column mt-4">
                <p class="mb-3" style="font-size: 14px;"><%= post.intro %></p>
                <div>
                  <%= link_to 'Read more', post, class: 'btn btn-dark rounded-0' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <div></div>
      <div></div>
      <div></div>
    </div>
  </div>
</main>