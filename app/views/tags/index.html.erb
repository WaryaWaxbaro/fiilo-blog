<main class="min-85vh py-5">
  <div class="container">
    <div class="p-sm-2 border-bottom my-2">
      <h1 class="fs-3 fw-normal ls-6">Tags</h1>
    </div>
    <div class="p-sm-2">
      <div class="row">
        <div class="col-12">
          <div class="text-end">
            <%= link_to 'New Tag', new_tag_path, class: 'btn btn-dark rounded-0' %>
          </div>
        </div>
      </div>
    </div>
    <div class="w-100 shadow rounded-3" data-users-target="usersTableContainer" id="users-table-container">
      <div class="table-responsive py-4 p-2 p-sm-3">
        <table class="table table-bordered">
          <thead class="table-dark">
          <tr>
            <th>Tag Name</th>
            <th>Posts used</th>
            <th colspan="3">Actions</th>
          </tr>
          </thead>

          <tbody>
          <% @tags.each do |tag| %>
            <tr>
              <td><%= tag.name %></td>
              <td><%= tag.posts.count %></td>
              <td class="w-40">
                <%= link_to tag, class: 'shadow-sm' do %>
                  <span class="fs-5"><i class="fas fa-eye"></i></span>
                <% end %>
              </td>
              <td class="w-40">
                <%= link_to edit_tag_path(tag), class: 'shadow-sm' do %>
                  <span class="text-warning fs-5"><i class="fas fa-edit"></i></span>
                <% end %>
              </td>
              <td class="w-40">
                <%= link_to tag, method: :delete, data: { confirm: 'Are you sure?' }, class: 'shadow-sm' do %>
                  <span class="text-danger fs-5"><i class="far fa-trash-alt"></i></span>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>


