<main class="min-85vh pt-5">
  <div class="container">
    <h1 class="fs-1 ls-6">Users</h1>
    <div class="table-responsive pt-4">
      <table class="table table-bordered">
        <thead class="table-dark">
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Phone</th>
          <th>Email</th>
          <th>Is Active</th>
          <th>Roles</th>
          <th>Register date</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.phone %></td>
            <td><%= user.email %></td>
            <td class="text-center">
              <% if user.is_active %>
              <span class="text-success fs-5"><i class="far fa-check-circle"></i></span>
              <% else %>
                <span class="text-danger fs-5"><i class="far fa-times-circle"></i></span>
              <% end %>
            </td>
            <td><%= user&.roles.join(", ") %></td>
            <td><%= user.created_at.strftime("%d.%m.%Y %H:%M") %></td>
            <td>
              <%= link_to user do %>
                <span class="fs-5"><i class="fas fa-eye"></i></span>
              <% end %>
            </td>
            <td>
              <%= link_to edit_user_path(user) do %>
                <span class="text-warning fs-5"><i class="fas fa-user-edit"></i></span>
              <% end %>
            </td>
            <td>
              <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <span class="text-danger fs-5"><i class="far fa-trash-alt"></i></span>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</main>

